# Application Configuration
APP_NAME=AI-Enhanced-Government-Services
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# AWS Configuration (Step 2.1 - DynamoDB Setup)
DEFAULT_AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# DynamoDB Configuration
DYNAMODB_CHAT_SESSIONS_TABLE=ai4ai-chat-sessions
DYNAMODB_CHAT_MESSAGES_TABLE=ai4ai-chat-messages

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_AGENT_CORE_REGION=us-west-2

# Nova Act Configuration
NOVA_ACT_API_KEY=your_nova_act_api_key

# Strands Configuration
STRANDS_API_KEY=your_strands_api_key

# Database Configuration (for future use)
DATABASE_URL=sqlite:///./government_services.db

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Malaysian Government Services
JPJ_BASE_URL=https://mysikap.jpj.gov.my
LHDN_BASE_URL=https://www.hasil.gov.my
JPN_BASE_URL=https://www.jpn.gov.my
EPF_BASE_URL=https://www.kwsp.gov.my

# CORS Configuration
# Comma-separated list of allowed origins
# Example: https://your-app.amplifyapp.com,https://your-custom-domain.com
CORS_ORIGINS=https://your-amplify-domain.amplifyapp.com

# External APIs
TAVILY_API_KEY=your_tavily_api_key
CRAWL4AI_API_KEY=your_crawl4ai_api_key

# Browser Automation
HYPERBROWSER_API_KEY=your_hyperbrowser_api_key
REMOTE_BROWSER_CDP_URL=http://remote-server:9222

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
